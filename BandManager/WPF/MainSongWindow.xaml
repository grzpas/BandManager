<Window x:Class="Band.MainSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Band"
        mc:Ignorable="d"
        Title="Main band window" Height="350" Width="525">
    <Grid Name="MainLayout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Name="Songs" Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height ="10*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Background="Blue">
                <TextBlock Text="Here will be the grid buttons"></TextBlock>
            </StackPanel>
            <DockPanel Grid.Row="1" Grid.Column="0" Background="Green">
                <DataGrid Width="auto" Height="auto" AutoGenerateColumns="False" x:Name="SongDataGrid" ItemsSource="{Binding Songs}">
                    <DataGrid.Columns>
                        <DataGridComboBoxColumn Header="Type" SelectedValueBinding="{Binding Id}" DisplayMemberPath="Name" SelectedValuePath="Id">
                            <DataGridComboBoxColumn.ElementStyle>
                                <Style TargetType="{x:Type ComboBox}">
                                    <Setter Property="ItemsSource" Value="{Binding Path=DataContext.SongTypes, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                </Style>
                            </DataGridComboBoxColumn.ElementStyle>
                            <DataGridComboBoxColumn.EditingElementStyle>
                                <Style TargetType="{x:Type ComboBox}">
                                    <Setter Property="ItemsSource" Value="{Binding Path=DataContext.SongTypes, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                </Style>
                            </DataGridComboBoxColumn.EditingElementStyle>
                        </DataGridComboBoxColumn>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                        <DataGridTextColumn Header="Scale" Binding="{Binding Scale}"/>
                    </DataGrid.Columns>

                </DataGrid>
            </DockPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" Background="DeepPink">
                <TextBlock Text="Here we will have the text with accords" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Grid>
        <Grid Name="SongBlocks" Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Background="Red">
                <TextBlock Text="Here will be the song blocks"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Background="Aqua">
                <TextBlock Text="Here will be the buttons for block manipulation"></TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
